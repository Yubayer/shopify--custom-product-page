<style>
  .custom__banner--{{ section.id }}{
    position: relative;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }
  .custom__banner--{{ section.id }} img{
    width: 100%;
    height: 100%;
  }
  .custom__banner-text{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 100%;
    text-align: center;
  }
  .custom__banner-text h2{
    color: var(--white, #FFF);
    font-size: 48px;
    line-height: 56px; /* 116.667% */
    margin: 0 0 16px;
  }
  .custom__banner-text a{
    text-decoration: none;
    color: var(--white, #FFF);
    font-size: 16px;
    font-weight: 500;
    line-height: 22px; /* 137.5% */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    border-radius: 8px;
    background: var(--primary, #78C043);
    padding: 16px 32px;
  }
  .custom__banner-text a svg path{
    fill: #FFF;
  }
  .desktop__banner{
    display: block;
  }
  .mbl__banner{
    display: none;
  }


  @media screen and (max-width: 768px){
    .custom__banner--{{ section.id }}{
      margin-top: {{ section.settings.margin_top-m }}px;
      margin-bottom: {{ section.settings.margin_bottom-m }}px;
    }
    .desktop__banner{
      display: none;
    }
    .mbl__banner{
      display: block;
    }
    .custom__banner-text{
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
      width: 100%;
      text-align: center;
    }
    .custom__banner-text h2{
      font-size: 24px;
      line-height: 30px; /* 116.667% */
    }
    .custom__banner-text a{
      font-size: 16px;
      line-height: 22px; /* 137.5% */
      padding: 12px 24px;
    }
  }
</style>
<section class="custom__banner--{{ section.id }}">
  {% if section.settings.image %}
    <img class="desktop__banner" src="{{ section.settings.image | img_url: 'master' }}" alt="Banner">
  {% endif %}
  {% if section.settings.image_m %}
    <img class="mbl__banner" src="{{ section.settings.image_m | img_url: 'master' }}" alt="Banner">
  {% endif %}
  {% if section.settings.title != blank or section.settings.btn_text != blank %}
    <div class="custom__banner-text">
      <h2>{{ section.settings.title }}</h2>
      <a href="{{ section.settings.link }}"><span class="cb__btn-text">{{ section.settings.btn_text }}</span>{% render "all-icons", name: "ccl__btn" %}</a>
    </div>
  {% endif %}
</section>
{% schema %}
{
  "name": "Custom Banner",
  "settings": [
     {
       "type": "image_picker",
       "id": "image",
       "label": "Image"
     },
     {
       "type": "image_picker",
       "id": "image_m",
       "label": "Image(Mobile)"
     },
     {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Where Clouds Come to Life"
     },
     {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "SHOP NOW"
     },
     {
      "type": "url",
      "id": "link",
      "label": "Button Link"
     },
      {
        "type": "header",
        "content": "Spacing"
      },
      {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Margin Top",
        "default": 16
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Margin Bottom",
        "default": 16
      },
      {
        "type": "range",
        "id": "margin_top-m",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Margin Top (Mobile)",
        "default": 16
      },
      {
        "type": "range",
        "id": "margin_bottom-m",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Margin Bottom (Mobile)",
        "default": 16
      }

  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}
