<style>
  .iat--{{ section.id }}{
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }
  .iat__wrapper{
    display: grid;
    grid-template-columns: repeat(2,1fr);
  }
  .iat__image{
    font-size: 0;
    line-height: 0;
    
  }
  .iat__image img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 12px 0px 0px 12px;
  }
  .iat__text{
    text-align: center;
    border-radius: 12px;
    background: #F9F9F9;
    padding: 85px;
  }
  .iat__text p{
    color: var(--gray, #323232);
    font-size: 16px;
    line-height: 22px; /* 137.5% */
    margin: 0 0 16px;
  }
  .iat__text h2{
    color: var(--black, #000);
    font-size: 48px;
    line-height: 56px; /* 116.667% */
    margin: 0 0 24px;
  }
  .iat__text a{
    text-decoration: none;
    color: var(--white, #FFF);
    font-size: 16px;
    font-weight: 500;
    line-height: 22px; /* 137.5% */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    border-radius: 8px;
    background: var(--primary, #78C043);
    padding: 16px 32px;
  }
  .iat__text a svg path{
    fill: #FFF;
  }
  @media screen and (min-width: 768px){
    .iat__wrapper{
      grid-auto-rows: 1fr;
      align-items: stretch;
    }
    .iat__text{
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      align-content: center;
    }
  }
  @media screen and (max-width: 768px){
    .iat--{{ section.id }}{
      margin-top: {{ section.settings.margin_top-m }}px;
      margin-bottom: {{ section.settings.margin_bottom-m }}px;
    }

    .iat__wrapper{
      display: grid;
      grid-template-columns: 1fr;
    }
    .iat__text{
      padding: 30px;
    }
    .iat__text p{
      font-size: 12px;
      margin: 0 0 4px;
    }
    .iat__text h2{
      font-size: 24px;
      line-height: 30px;
      margin: 0 0 16px;
    }
    .iat__text a{
      font-size: 16px;
      line-height: 22px; /* 137.5% */
      padding: 12px 24px;
    }
  }
</style>
<section class="iat--{{ section.id }}">
  <div class="iat__wrapper page-width">
    <div class="iat__image">
      {% if section.settings.image %}
        <img src="{{ section.settings.image | img_url: "master" }}" alt="{{ section.settings.title }}">
      {% endif %}
    </div>
    <div class="iat__text">
      <p>{{ section.settings.text }}</p>
      <h2>{{ section.settings.title }}</h2>
      <a href="{{ section.settings.link }}"><span class="iat__btn-text">{{ section.settings.btn_text }}</span>{% render "all-icons", name: "ccl__btn" %}</a>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Image and Text",
  "settings": [
    {
     "type": "image_picker",
     "id": "image",
     "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "JOIN CBD JOINT REWARDS TODAY"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "GOOD THINGS COME TO THOSE WHO VAPE"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Find Us More"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Margin Top",
      "default": 16
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 16
    },
    {
      "type": "range",
      "id": "margin_top-m",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Margin Top (Mobile)",
      "default": 16
    },
    {
      "type": "range",
      "id": "margin_bottom-m",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom (Mobile)",
      "default": 16
    }

  ],
  "presets": [
    {
      "name": "Image and Text"
    }
  ]
}
{% endschema %}
